<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="singleViewClick"
        android:text="Single View Type" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="multiViewClick"
        android:text="Multiple View Type" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="headerMultiViewClick"
        android:text="Header + Multiple View Type" />


</LinearLayout>